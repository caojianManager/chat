{
  "name": "objc-zmq",
  "version": "0.1.2",
  "summary": "Objective-C binding for ZeroMQ",
  "description": "Bundled with ZeroMQ 4.0.5 library.\n\nThis is an Objective-C version of the reference ZeroMQ object-oriented C API. It follows the guidelines laid out by the official \"Guidelines for ZeroMQ bindings\".",
  "homepage": "https://github.com/jeremy-w/objc-zmq",
  "license": "MIT",
  "authors": {
    "Simon Strandgaard": "simon@opcoders.com"
  },
  "source": {
    "git": "https://github.com/jeremy-w/objc-zmq.git",
    "tag": "0.1.2"
  },
  "platforms": {
    "ios": "7.0",
    "osx": "10.10"
  },
  "requires_arc": true,
  "source_files": [
    "Classes/cppzmq/*.hpp",
    "Classes/objc-zmq/*.{h,m}",
    "Classes/zeromq/*.h"
  ],
  "public_header_files": "Classes/**/*.{h,hpp}",
  "vendored_libraries": "Library/zeromq-4.0.5/static/libzmq.a",
  "libraries": "c++"
}
